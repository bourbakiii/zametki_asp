@{
    ViewData["Title"] = "Созданить заметку";
}

<script src="~/js/add-page.js"></script>

<h1>@ViewData["Title"]</h1>
<form class='form' method="post" onsubmit="addProduct(event)">
    <div class="form-group">
        <label for="exampleInputEmail1">Название заметки</label>
        <input required name="name" type="text" class="form-control" id="add-name" placeholder="Введите название">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Содержимое заметки</label>
        <textarea required name="content" class="form-control" rows="5" id="add-content" placeholder="Введите содержимое заметки"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Создать заметку</button>
</form>